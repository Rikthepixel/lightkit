{
    "compilerOptions": {
        "outDir": "lib",
        "lib": [
            "DOM",
            "ES2015",
            "ES2015.Promise",
        ],
        "module": "ESNext",
        "target": "ES2015",
        "declaration": true,
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "lib",
    ]
}